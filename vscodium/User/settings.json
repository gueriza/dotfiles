{
    /* Warmup */
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "extensions.autoCheckUpdates": true,
    "explorer.confirmDelete": false,
    "explorer.openEditors.visible": 0,
    "files.exclude": {
        ".DS_Store": true
    },
    "files.autoSaveDelay": 1000,
    "files.autoSave": "afterDelay",
    "git.enableSmartCommit": true,
    "window.zoomLevel": 0,
    /* in editor content */
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.cursorStyle": "block",
    "editor.folding": true,
    "editor.fontFamily": "SF Mono",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.lightbulb.enabled": true,
    "editor.matchBrackets": "always",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.smoothScrolling": true,
    /* workbench Look */
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.settings.editor": "json",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.closeEmptyGroups": false,
    "workbench.fontAliasing": "auto",
    "workbench.editor.showIcons": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,
    "workbench.tree.indent": 10,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.colorCustomizations": {
        /*"statusBar.background": "#022152",*/
        "tab.activeBackground": "#282c34",
        "activityBar.background": "#282c34",
        "sideBar.background": "#282c34",
        "statusBarItem.remoteBackground": "#E0BB33",
        "statusBarItem.remoteForeground": "#022152"
    },
    /* todo-tree Ext */
    "todo-tree.general.statusBar": "total",
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "HACK",
        "BUG",
        "NOTE"
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "iconColour": "yellow",
            "type": "text-and-comment",
            "foreground": "black",
            "background": "yellow",
            "gutterIcon": true
        },
        "FIXME": {
            "icon": "alert",
            "iconColour": "red",
            "type": "text-and-comment",
            "foreground": "white",
            "background": "red",
            "gutterIcon": true
        },
        "NOTE": {
            "icon": "note",
            "iconColour": "orange",
            "type": "text-and-comment",
            "foreground": "white",
            "background": "#69D2FC",
            "gutterIcon": true
        },
        "HACK": {
            "icon": "tools",
            "iconColour": "green",
            "type": "text-and-comment",
            "foreground": "white",
            "background": "green",
            "gutterIcon": true
        },
        "BUG": {
            "icon": "bug",
            "iconColour": "#CB4065",
            "type": "text-and-comment",
            "foreground": "white",
            "background": "#CB4065",
            "gutterIcon": true
        },
        /* GITLENS */
        "gitlens.hovers.enabled": true,
        "gitlens.codeLens.enabled": false,
        "gitlens.views.repositories.enabled": true,
        "gitlens.views.fileHistory.enabled": true,
        "gitlens.views.lineHistory.enabled": true,
        "gitlens.views.compare.location": "scm",
        "gitlens.views.search.location": "scm",
        "gitlens.blame.heatmap.enabled": true,
        "gitlens.blame.highlight.enabled": true,
        "gitlens.statusBar.enabled": false,
        "gitlens.views.search.enabled": false,
        "gitlens.views.compare.enabled": false,
        "gitlens.mode.statusBar.enabled": false,
    },
}